<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="MyMaterialTheme" parent="MyMaterialTheme.Base"></style>

    <style name="MyMaterialTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:colorForeground">@color/white</item>
        <item name="android:textColorSecondary">@color/colorPrimary</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:windowBackground">@color/windowBackground</item>
    </style>


    <style name="ColorSwitchStyle">
        <item name="colorControlActivated">#FFC400</item>
    </style>

    <style name="CustomImageViewSetting">
        <item name="android:layout_width">25dp</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">17dp</item>
    </style>

    <style name="CustomTitleSetting">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">17dp</item>
        <item name="android:layout_marginTop">7dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">#6ea51d</item>
        <item name="android:textSize">16sp</item>
        <!-- <item name="android:textStyle">bold</item> -->
    </style>

    <style name="CustomRelativeLayoutSetting">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:background">@drawable/relative_layout_selector</item>
    </style>

    <style name="CustomTextViewSetting">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">17dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="CustomSwitchSetting">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">26dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginRight">17dp</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="CustomTextViewSetting_Change_Display">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">33dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginRight">17dp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="CustomSeekbarSetting">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginRight">21dp</item>
        <item name="android:layout_marginLeft">21dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="DialogTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">17dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="CustomViewDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginLeft">60dp</item>
        <item name="android:background">#206ea51d</item>
    </style>

    <style name="CustomTextViewBottombar">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <!-- <item name="android:textStyle">bold</item> -->
    </style>

</resources>